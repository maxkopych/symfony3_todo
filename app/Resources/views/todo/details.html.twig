{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-primary" href="/my_project/web/">Back Todos</a>
    <hr>
    <h2 class="page-header text-center">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item"><strong>Category</strong>: {{ todo.category }}</li>
        <li class="list-group-item"><strong>Priority</strong>: {{ todo.priority }}</li>
        <li class="list-group-item"><strong>Description</strong>: {{ todo.description }}</li>
        <li class="list-group-item"><strong>Created</strong>: {{ todo.dueDate|date("F j, Y, g:i a") }}</li>
        <li class="list-group-item"><strong>Due</strong>: {{ todo.createDate|date("F j, Y, g:i a") }}</li>
    </ul>
{% endblock %}